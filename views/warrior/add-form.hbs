<h2>Zarejestruj się</h2>

<form action="/warrior" method="POST">
    <label> Imię:
        <p>
            <input
                type="text"
                name="name"
                required
                minlength="3"
                maxlength="74">
        </p>
    </label>

    <label>Siła:
        <p>
            <input
                type="number"
                name="strength"
                value="1"
                min="1"
                max="7">
        </p>
    </label>

    <label>Obrona:
        <p>
            <input
                type="number"
                name="defence"
                value="1"
                min="1"
                max="7">
        </p>
    </label>

    <label>Wytrzymałość:
        <p>
            <input
                type="number"
                name="stamina"
                value="1"
                min="1"
                max="7">
        </p>
    </label>

    <label>Zręczość:
        <p>
            <input
                type="number"
                name="agility"
                value="1"
                min="1"
                max="7">
        </p>
    </label>
    <input type="submit" value="Zarejestruj">
</form>
